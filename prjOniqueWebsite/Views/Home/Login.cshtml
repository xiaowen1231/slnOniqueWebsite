@model prjOniqueWebsite.Models.ViewModels.LoginVM

@{
    ViewData["Title"] = "會員登入";
}

<form method="post">
    <div class="width-1000px mx-auto p-2 border rounded d-flex shadow" data-aos="zoom-in">
        <div class="w-450-h-450">
            <img src="@Url.Content("~/images/memberphoto/loginpage.jpg")" class="rounded" />
        </div>
        <div class="flex-fill p-2">
            <div class="fs-5 fw-bold border-bottom p-2">
                會員登入
            </div>
            <div class="fw-bold p-2 mt-2">
                帳號:
            </div>
            <div class="p-2">
                <input type="text" class="form-control" name="Email" value="Asa@gmail.com">
            </div>            
            <div class="fw-bold p-2 mt-2">
                密碼:
            </div>
            <div class="p-2">
                <input type="password" class="form-control" name="Password">
            </div>
            <div class="d-flex justify-content-between p-2">
                <div class="p-2">
                    <input type="button" value="忘記密碼" class="btn btn-outline-dark fw-bold">
                </div>
                <div class="p-2">
                    <input type="button" value="註冊" class="btn btn-outline-dark fw-bold">
                    <input type="submit" value="登入" id="Login" class="btn btn-dark fw-bold">
                </div>
            </div>
        </div>
    </div>
</form>
@section Styles{
    <style>
        form{
            position:fixed;
            top:50%;
            transform:translate(-50%,-59%);
            left:50%;
        }
    </style>
}
