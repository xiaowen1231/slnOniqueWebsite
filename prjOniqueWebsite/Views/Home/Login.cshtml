@model prjOniqueWebsite.Models.ViewModels.LoginVM

@{
    ViewData["Title"] = "會員登入";
}

<form method="post">
    <div class="width-1000px mx-auto p-2 border rounded d-flex shadow" data-aos="zoom-in">
        <div class="w-450-h-450">
            <img src="@Url.Content("~/images/memberphoto/loginpage.jpg")" class="rounded" />
        </div>
        <div class="flex-fill p-2">
            <div class="fs-5 fw-bold border-bottom p-2">
                會員登入
            </div>
            <div class="fw-bold p-2 mt-2">
                帳號:
            </div>
            <div class="p-2">
                <input type="text" class="form-control" name="Email" value="" id="inputEmail">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>            
            <div class="fw-bold p-2 mt-2">
                密碼:
            </div>
            <div class="p-2">
                <input type="password" class="form-control" name="Password" id="inputPassword">
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <input type="checkbox" id="showPassword"> 顯示密碼
            <div class="d-flex justify-content-between p-2">
                <div class="p-2">
                    @*@Html.ActionLink("忘記密碼", "ForgetPwd","Home", "",new {@class="btn btn-outline-dark fw-bold" })*@
                </div>
                <div class="p-2">
                    @Html.ActionLink("註冊", "Register","Home", "",new {@class="btn btn-outline-dark" })
                    <input type="submit" value="登入" id="Login" class="btn btn-dark fw-bold">
                </div>
            </div>
            <div class="mx-3 text-end position-sticky">
                <input type="button" class="btn btn-outline-secondary" value="DemoMember" id="DemoMember" />
                <input type="button" class="btn btn-outline-secondary" value="DemoEmployee" id="DemoEmployee" />
            </div>
        </div>
    </div>
</form>
@section Styles{
    <style>
        form{
            position:fixed;
            top:50%;
            transform:translate(-50%,-59%);
            left:50%;
        }
    </style>
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#showPassword').on('change', function () {
                var passwordInput = $('#inputPassword');
                if ($(this).is(':checked')) {
                    passwordInput.attr('type', 'text');
                } else {
                    passwordInput.attr('type', 'password');
                }
            });
        });
        $('#DemoMember').on('click', function () {
            let email = "oniquedemo@gmail.com"
            $('#inputEmail').val(email)
            $('#inputPassword').val("123")
        })
        $('#DemoEmployee').on('click', function () {
            let email = "Hank@gmail.com"
            $('#inputEmail').val(email)
            $('#inputPassword').val("123")
        })

    </script>
}
