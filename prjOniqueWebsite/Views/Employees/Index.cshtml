@section Scripts{
    <script>
        const employeetable = document.querySelector("#employeetable")
        load()

        async function load() {
            const response = await fetch(`@Url.Content("~/EmployeeApi/showEmployeeList")`)
            const data = await response.json();

            const tableEmployeeList = data.map(item => {
                const { employeeId, photoPath, employeeName, dateOfBirth, gender, phone, email, employeeLevelName } = item
                const formattedDateOfBirth = formatDate(dateOfBirth);  //轉換型態

                return (`

                                            <tr>
                                                <td>${employeeId}</td>
                                                <td>
                                                    <div class="d-flex gap-2 imgbox">
                                                         <img src="@Url.Content("~/images/uploads/Employee/")${photoPath}" alt="" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <span>${employeeName}</span>
                                                </td>
                                                    <td>${formattedDateOfBirth}</td>
                                                    <td>${gender}</td>
                                                    <td>${phone}</td>
                                                    <td>${email}</td>
                                                    <td>${employeeLevelName}</td>
                                                <td>
                                                    <div class="circle-size-25">
                                                        <a href="@Url.Content("~/employees/edit?id=")${employeeId}"><img src="@Url.Content("~/images/uploads/Employee/edit.png")" alt=""></a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="circle-size-25">
                                                         <a href="javascript:void(0);" onclick="openDelete(${employeeId})">
                                                         <img src="@Url.Content("~/images/uploads/Employee/delete.png")" alt=""></a>
                                                    </div>
                                                </td>
                                            </tr>
                                        `)
            })
            employeetable.innerHTML = tableEmployeeList.join("");

        }
        function formatDate(dateString) {
            const date = new Date(dateString);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0'); // 補零至兩位數
            const day = String(date.getDate()).padStart(2, '0'); // 補零至兩位數
            return `${year}-${month}-${day}`;
        }

        function openDelete(employeeId) {
            const confirmDialog = new bootstrap.Modal(document.getElementById("confirmDialog"));
            const confirmMessageElement = document.getElementById("confirmMessage");
            const confirmButton = document.getElementById("confirmButton");

            confirmMessageElement.textContent = `確定要刪除 員工編號${employeeId} 的員工嗎？`;

            confirmButton.onclick = function () {
                const url = '@Url.Action("Delete", "Employees")' + '?employeeId=' + employeeId;
                window.location.href = url;
            };

            confirmDialog.show();
        }

        // 在頁面載入完成後綁定事件處理函式
        document.addEventListener("DOMContentLoaded", function () {
            // 綁定查詢按鈕點擊事件
            const btnSearch = document.getElementById("btnSearch");
            btnSearch.addEventListener("click", function () {
                performSearch();
            });

            // 綁定表單提交事件，防止預設的表單提交行為
            const form = document.querySelector("form");
            form.addEventListener("submit", function (event) {
                event.preventDefault();
                performSearch();
            });
        });

        // 定義搜尋功能的函式
        function performSearch() {
            const keyword = document.getElementById("txtKeyword").value;
            const filteredData = data.filter(item => item.employeeName.includes(keyword));
            renderTable(filteredData); // 假設有一個渲染表格的函式 renderTable()，可以把搜尋結果顯示出來
        }

    </script>
}

