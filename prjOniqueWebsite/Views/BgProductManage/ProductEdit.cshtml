@model prjOniqueWebsite.Models.DTOs.BgEditProductDto
@{
    ViewData["Title"] = "ProductEdit";
    Layout = "~/Views/Shared/_Layout_Background.cshtml";
}

<div class=" d-flex justify-content-center">
    <div class="col-2" style="margin-left: 8%;">
        <div class="text-center my-2">
            <div class=" border p-3 rounded-4 ">
                <div class="p-2 my-1 bg-dark text-white rounded">
                    商品細部編輯
                </div>
                <div class="container">
                    <input type="button" value="尺寸、顏色設定"
                           class="btn btn-outline-dark form-control border my-2 fw-bold">
                    <input type="button" value="新增尺寸" class="btn btn-outline-dark border form-control my-2 fw-bold">
                    <input type="button" value="新增顏色" class="btn btn-outline-dark border form-control my-2 fw-bold">
                    <input type="button" value="庫存量設定"
                           class="btn btn-outline-dark border form-control my-2 fw-bold">
                </div>
            </div>
        </div>
    </div>
    <div class="border shadow rounded-4 container my-2 mx-4">
        <div class="container  text-center p-2">
            <div class="align-items-center fs-3 fw-bold border-bottom p-2">編輯商品資訊</div>
        </div>
        <div id="Edproduct">
        <div class="container d-flex my-2 justify-content-center">
            <div class="d-flex py-3 mx-4 rounded">
                <div class="col-6">
                    <div class="my-2 d-flex align-items-center">
                        <div class="text-end fw-bold border width-120px">商品名稱 :</div>
                        <div class="mx-3">@Model.ProductName</div>
                    </div>
                    <div class="my-2 d-flex align-items-center">
                            <div class="text-end fw-bold border width-120px">商品價格 :</div>
                        <div class="mx-2">
                            <input type="text" class="form-control" value="@Model.Price">
                        </div>
                    </div>
                    <div class="my-2 d-flex align-items-center">
                            <div class="text-end fw-bold border width-120px" >商品分類 :</div>
                        <div class="mx-3">@Model.Category</div>
                    </div>
                    <div class="my-2 gap-3 d-flex align-items-center">
                            <div class="text-end fw-bold border width-120px"> 供應商 :</div>
                        <div>@Model.SupplierName</div>
                    </div>
                    <div class="my-2 d-flex align-items-center">
                            <div class="text-end fw-bold border width-120px" >上架時間 :</div>
                        <div class="mx-2">
                            <input type="datetime" value="@Model.AddedTime" class="form-control">
                        </div>
                    </div>
                    <div class=" d-flex align-items-center">
                            <div class="text-end fw-bold border width-120px"> 下架時間 :</div>
                        <div class="mx-2">
                            <input type="datetime" value="@Model.ShelfTime" class="form-control">
                        </div>
                    </div>
                    <div class="my-2 d-flex">
                        <div class="text-end fw-bold border width-120px">商品描述 :</div>
                        <div class="mx-2">
                            <textarea class="form-control" style="width: 140%; height: 180px;">@Model.Description</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-5 container" style="margin-left: 15%;">
                    <img src="../images/uploads/products/@Model.PhotoPath" class="rounded img-thumbnail width-265px">
                    <input type="file" class="form-control my-2">
                    <div class="d-flex align-items-center my-3">
                        <div class="fw-bold mx-2 width-120px border text-end">優惠活動:</div>
                        <div class="mx-2">
                            <select class="form-select-sm width-90px">
           @*                     <option>請選擇</option>
                                <option>夏日特賣</option>
                                <option>熱銷優惠</option>*@
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="p-4 container text-center">
                <input type="button" value="取消編輯" class="btn btn-outline-dark border fw-bold mx-3">
                <input type="submit" value="確認編輯" class="btn btn-dark border fw-bold">
            </div>
        </div>
    </div>
</div>
</div>
@section Styles{

}
@section Scripts{
   
}
