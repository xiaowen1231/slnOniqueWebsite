@model prjOniqueWebsite.Models.EFModels.Products

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Background.cshtml";
}
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex container">
        <div class="col-2 p" style="margin-left: 8%;">
            <div class="text-center my-2 p">                
                <div class=" border p-3 rounded-4 my-3">
                    <div class="p-2 my-1 bg-dark text-white rounded">
                        細項新增
                    </div>
                    <div class="container">
                        <a class="btn btn-outline-dark border form-control my-2 fw-bold" asp-action="BgCreateSize">新增尺寸</a>
                        <a class="btn btn-outline-dark border form-control my-2 fw-bold" asp-action="BgCreateColor">新增顏色</a>
                        <a class="btn btn-outline-dark border form-control my-2 fw-bold" asp-action="BgDiscountCreate">新增優惠</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="border shadow rounded-4 container justify-content-center my-2 mx-4">
            <div class="text-center p-2">
                <div class="align-items-center fs-3 fw-bold border-bottom p-2">新增商品資訊</div>
            </div>
            <div class="container d-flex">
                <div class="p-2 col-5">
                    <div class="d-flex align-items-center my-3">
                        <label asp-for="ProductName" class="width-120px">商品名稱:</label>
                        <input type="text" asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center my-3">
                        <label asp-for="Price" class="width-120px">商品價格:</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center my-3">
                        <label asp-for="ProductCategoryId" class="width-120px">商品分類:</label>
                        <select asp-for="ProductCategoryId" class="form-control" asp-items="ViewBag.ProductCategoryId"></select>
                    </div>
                    <div class="d-flex align-items-center my-3">
                        <label asp-for="SupplierId" class="width-120px">供應商:</label>
                        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                    </div>
                    <div class="d-flex align-items-center my-3">
                        <label asp-for="AddedTime" class="width-120px">上架時間:</label>
                        <input asp-for="AddedTime" class="form-control" />
                        <span asp-validation-for="AddedTime" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center my-3">
                        <label asp-for="ShelfTime" class="width-120px">下架時間:</label>
                        <input asp-for="ShelfTime" class="form-control" />
                        <span asp-validation-for="ShelfTime" class="text-danger"></span>
                    </div>
                    <div class="d-flex my-3">
                        <label asp-for="Description" class="width-120px">商品描述:</label>
                        <textarea asp-for="Description" class="form-control" style="width: 100%; height: 160px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-5 container">
                    <div class="my-3 d-flex">
                        <img asp-for="PhotoPath" src="~/images/uploads/products/" class="rounded img-thumbnail" id="img" />
                        <span asp-validation-for="PhotoPath" class="text-danger"></span>
                    </div>
                    <input type="file" class="form-control" name="photo"/>
                </div>
            </div>
            <div class="container text-center mb-4">
                <a class="btn btn-outline-dark" asp-action="Index">取消</a>
                <input type="submit" value="確認新增" class="btn btn-dark" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@section Styles{
    <style>
        #img {
            width: 70%;
            height: 70%;
            object-fit: cover;
            margin: auto;
        }
    </style>
}