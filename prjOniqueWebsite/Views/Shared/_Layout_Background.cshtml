<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/CSS/BackgroundSystemHomePage.css">
    <link href="~/css/reset.css" rel="stylesheet" />
    <link href="~/css/common.css" rel="stylesheet" />
    <link href="~/css/sweetalert2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
    <title>後台管理系統</title>
</head>
<body>
    <div class="myContainer nav">
        <div class="nav">
            <div class="logoAndTitle">
                <figure class="logo">
                    <img src="~/images/footer/logoen.png" />
                </figure>
                <div class="title">後台管理系統</div>
            </div>
            <div class="accountAndManage">
                <div>歡迎 , OOO</div>
                <figure class="photoStickers">
                    <img src="~/images/background/範例頭貼1.jpg" />
                </figure>
                <figure class="backgroundHeadIcon">
                    <img src="~/images/background/bell.png" />
                    <span class="notify" id="notify">99</span>
                </figure>
            </div>
        </div>
    </div>
    <div class="myContainer">
        <div class="optionsAndContent">
            <div class="managerOptions sticky">
                <div class="btnOptions menu" id="btnMenu">
                    <figure class="icon">
                        <img src="~/images/background/close.png" />
                    </figure>
                </div>
                <div class="btnOptions">
                    <figure class="icon">
                        <img src="~/images/background/employee.png" />
                    </figure>
                    <div>員工管理</div>
                </div>
                <a class="nav-link text-white" asp-controller="member" asp-action="Index">
                <div class="btnOptions">
                    <figure class="icon">
                        <img src="~/images/background/group.png" />
                    </figure>
                    <div>會員管理</div>
                </div>
                </a>
                <a class="nav-link text-white" asp-controller="BgProductsManage" asp-action="Index">
                    <div class="btnOptions">
                        <figure class="icon">
                            <img src="~/images/background/tshirt.png" />
                        </figure>
                        <div>商品管理</div>
                    </div>
                </a>
                <a class="nav-link text-white" asp-controller="order" asp-action="Index">
                    <div class="btnOptions" id="order">
                        <figure class="icon">
                            <img src="~/images/background/shopping-list.png" />
                        </figure>
                        <div>訂單管理</div>
                    </div>
                </a>
                <a class="nav-link text-white" asp-controller="BgProductsManage" asp-action="BgDiscountManage">
                    <div class="btnOptions">
                        <figure class="icon">
                            <img src="~/images/background/coupon.png" />
                        </figure>
                        <div>優惠管理</div>
                    </div>
                </a>
            </div>
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="messageIcon">
        <figure>
            <img src="~/images/background/messenger.png" />
        </figure>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>
    <script>
        let minSize = false;
        $("#btnMenu").click(function () {
            $(this).parent().toggleClass("min")
            if (!minSize) {
                $(this).find("img").prop("src", '@Url.Content("~/images/background/menu.png")')
                minSize = true
            }
            else {
                $(this).find("img").prop("src", '@Url.Content("~/images/background/close.png")')
                minSize = false
            }
        })

        const notify = document.querySelector("#notify")
        async function getOrderStatusCount(){
            const response = await fetch(`@Url.Content("~/OrderApi/getOrderStatusCount?statusId=1")`)
            const data=await response.json()
            console.log(typeof(data))
            //const count=data
            notify.innerHTML = data;
        }
        getOrderStatusCount()

        
        
        

    </script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>